<%- include('../includes/head', { pageTitle: 'Sign Up' }) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include('../includes/header') %>
    <main>
        <h1>Create New Account</h1>
        <form action="" method="">
            <p>
                <label for="email">Email</label>
                <input type="email" name="email" id="email" required>
            </p>
            <p>
                <label for="confirmEmail">Confirm Email</label>
                <input type="email" name="confirmEmail" id="confirmEmail" required>
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" name="password" minlength="4" id="password" required>
            </p>
            <p>
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" minlength="4" id="confirmPassword" required>
            </p>
            <hr>
            <p>
                <label for="fullname">Full Name</label>
                <input type="text" name="fullname" id="fullname" required>
            </p>
            <p>
                <label for="address">Address</label>
                <input type="text" name="address" id="address" required>
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" name="city" id="city" required>
            </p>
            <p>
                <label for="postal">Postal Code</label>
                <input type="text" name="postal" id="postal" minlength="6" maxlength="6" required>
            </p>
            <p>
                <button class="btn" type="submit">Create Account</button>
            </p>
            <p>
                <p id="form-switch"><a href="/login">Login Instead</a></p>
            </p>
        </form>
    </main>

<%- include('../includes/footer') %>