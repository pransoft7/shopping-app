<%- include('../../shared/includes/head', { pageTitle: 'Sign Up' }) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <h1>Create New Account</h1>
        <% if (inputData.errorMessage) { %>
            <section class="alert">
                <h2>Invalid Credentials</h2>
                <p><%= inputData.errorMessage %></p>
            </section>
        <% } %>
        <form action="/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <p>
                <label for="email">Email</label>
                <input type="email" name="email" id="email" value="<%= inputData.email %>" required>
            </p>
            <p>
                <label for="confirmEmail">Confirm Email</label>
                <input type="email" name="confirmEmail" id="confirmEmail" value="<%= inputData.confirmEmail %>" required>
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" name="password" minlength="4" id="password" value="<%= inputData.password %>" required>
            </p>
            <p>
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" minlength="4" id="confirmPassword" value="<%= inputData.confirmPassword %>" required>
            </p>
            <hr>
            <p>
                <label for="fullname">Full Name</label>
                <input type="text" name="fullname" id="fullname" value="<%= inputData.fullname %>" required>
            </p>
            <p>
                <label for="street">Street</label>
                <input type="text" name="street" id="street" value="<%= inputData.street %>" required>
            </p>
            <p>
                <label for="city">City</label>
                <input type="text" name="city" id="city" value="<%= inputData.city %>" required>
            </p>
            <p>
                <label for="postal">Postal Code</label>
                <input type="text" name="postal" id="postal" minlength="6" maxlength="6" value="<%= inputData.postal %>" required>
            </p>
            <p>
                <button class="btn" type="submit">Create Account</button>
            </p>
            <p>
                <p id="form-switch"><a href="/login">Login Instead</a></p>
            </p>
        </form>
    </main>

<%- include('../../shared/includes/footer') %>